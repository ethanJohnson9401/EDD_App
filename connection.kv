#:kivy 2.3.1

<ConnectionScreen>:
    orientation: 'vertical'
    
    Label:
        text: "Bluetooth Device Scanner"
        size_hint_y: None
        height: '40dp'
        font_size: '20sp'
    
    Button:
        text: "Scan for Devices"
        size_hint_y: None
        height: '30dp'
        padding: [10, 5]
        on_press: root.scan_for_devices()  # Call the scan function
        background_color: app.theme.PrimaryColor  # Use PrimaryColor from Theme

    BoxLayout:
        id: device_list_layout
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height  # Adjust height based on content