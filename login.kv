# Kivy version 2.0.0
<LoginScreen>:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    GridLayout:
        cols: 2
        size_hint_y: None
        height: self.minimum_height

        Label:
            text: 'User   Name'
            size_hint_y: None
            height: 40

        TextInput:
            id: username
            multiline: False
            size_hint_y: None
            height: 40

        Label:
            text: 'Password'
            size_hint_y: None
            height: 40

        TextInput:
            id: password
            password: True
            multiline: False
            size_hint_y: None
            height: 40

    Button:
        text: 'Login'
        size_hint_y: None
        height: 50
        on_press: app.on_login(username.text, password.text)